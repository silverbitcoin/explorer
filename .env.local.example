# SilverBitcoin Explorer Environment Configuration
# Copy this file to .env.local and update values as needed

# RPC Server Configuration
# Default: http://localhost:8332 (local development)
# Production: https://rpc.silverbitcoin.org
NEXT_PUBLIC_RPC_URL=http://localhost:8332

# API Base URL (for internal API routes)
# Default: http://localhost:3000 (local development)
NEXT_PUBLIC_API_URL=http://localhost:3000

# Explorer Title
NEXT_PUBLIC_EXPLORER_TITLE=SilverBitcoin Explorer

# Network Name
NEXT_PUBLIC_NETWORK_NAME=SilverBitcoin Mainnet

# Currency Symbol
NEXT_PUBLIC_CURRENCY_SYMBOL=SLVR

# Currency Decimals
NEXT_PUBLIC_CURRENCY_DECIMALS=8

# Block Time (seconds)
NEXT_PUBLIC_BLOCK_TIME=600

# Confirmation Threshold
NEXT_PUBLIC_CONFIRMATION_THRESHOLD=6

# Enable Analytics (optional)
NEXT_PUBLIC_ANALYTICS_ENABLED=false

# Enable Maintenance Mode
NEXT_PUBLIC_MAINTENANCE_MODE=false
